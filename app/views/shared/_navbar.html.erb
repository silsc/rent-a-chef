<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="navbar-iconlogo">
    <i class="fas fa-utensils fa-3x navbar-icon"></i>
    <%= link_to featured_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png", class: "navbar-logo img-fluid" %>
    <% end %>
  </div>


  <%= form_tag chefs_path, method: :get do %>
    <div class="search-form-control form-group">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control string required",
        placeholder: "Insert your location"
      %>
      <%= submit_tag "Search" , class: "btn btn-flat" %>
    </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item mr-3 active">
        <%= link_to "Create a chef profile", new_chef_path, class: "btn btn-flat" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My bookings", dashboard_path , class: "dropdown-item" %>
          <%= link_to destroy_user_session_path, class: "dropdown-item" do %>
            <div class="d-flex">
              <i class="fas fa-sign-out-alt logout-icon mr-2 align-self-center"></i>
              <p class="m-0">Log out</p>
            </div>
          <% end %>
          </div>
      </li>
    </ul>
  </div>
</div>
